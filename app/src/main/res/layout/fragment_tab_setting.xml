<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.example.asus.f_apps.tab_setting">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_profil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/hanif"
        app:civ_border_color="#fff"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/edit_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foto_profil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:shadowColor="#000"
        android:text="Edit Foto"
        android:textColor="#4FC3F7" />

    <RelativeLayout
        android:id="@+id/layer_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_foto"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp">


        <RelativeLayout
            android:id="@+id/layer_setting1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp">


            <ImageButton
                android:id="@+id/setting_1"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/setting_profil"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_profil"
                android:layout_centerHorizontal="true"
                android:text="Profil"
                android:textColor="#000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layer_setting2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/layer_setting1">

            <ImageButton
                android:id="@+id/setting_2"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/setting_edit_budget"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_uang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_edit_budget"
                android:layout_centerHorizontal="true"
                android:text="Edit Budget"
                android:textColor="#000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layer_setting3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/layer_setting2">

            <ImageButton
                android:id="@+id/setting_3"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/setting_display"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_display" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_display"
                android:layout_centerHorizontal="true"
                android:text="Display"
                android:textColor="#000" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layer_setting4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/layer_setting1">

            <ImageButton
                android:id="@+id/setting_4"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <ImageView
                android:id="@+id/setting_notif"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_notif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_notif"
                android:layout_centerHorizontal="true"
                android:text="Notification"
                android:textColor="#000" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layer_setting5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/layer_setting1"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/layer_setting4">

            <ImageButton
                android:id="@+id/setting_5"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/setting_about"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_about"
                android:layout_centerHorizontal="true"
                android:text="About"
                android:textColor="#000" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layer_setting6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/layer_setting1"
            android:layout_toRightOf="@+id/layer_setting5">

            <ImageButton
                android:id="@+id/setting_6"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/setting_logout"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_logout"
                android:layout_centerHorizontal="true"
                android:text="Logout"
                android:textColor="#000" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
