<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.f_apps.setting_edit_profil">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#BDBDBD"
        android:id="@+id/tab_edit_profil">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profil"
            android:textColor="#000"
            android:textSize="25dp"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/layer_setting_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_edit_profil">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/layer_display_name">

            <TextView
                android:id="@+id/display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display Name"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/display_namanya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Satrio"
                android:textColor="#3498db"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/display_name"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:id="@+id/nama_tombol"
                android:text="Change"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/layer_display_email"
            android:layout_below="@id/layer_display_name">

            <TextView
                android:id="@+id/display_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/display_nama_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Satrio@gmail.com"
                android:textColor="#3498db"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/display_email"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:id="@+id/email_tombol"
                android:text="Change"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/layer_display_password"
            android:layout_below="@id/layer_display_email">

            <TextView
                android:id="@+id/display_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/display_isi_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="***********"
                android:textColor="#3498db"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/display_password"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:id="@+id/password_tombol"
                android:text="Change"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
